{
  "name": "barohanpo-be",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "set DEBUG=app:* && nodemon --delay 2000ms --signal SIGTERM --exitcrash src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate-swagger": "node generate-swagger.js",
    "deploy-docs": "gh-pages -d docs -b gh-pages"
  },
  "nodemonConfig": {
    "delay": 2000,
    "signal": "SIGTERM",
    "watch": [
      "src/**/*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "logs/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Backend server for Barohanpo application",
  "dependencies": {
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "mysql2": "^3.14.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.26.2",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "nodemon": "^3.0.1"
  }
}

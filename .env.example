# Server Configuration
PORT=5000
NODE_ENV=development  # 'development', 'production', or 'test'

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_DATABASE=your_database_name

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here  # Should be a long, random string
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here  # Should be different from access secret
ACCESS_TOKEN_TTL=15m  # Access token expiration time (e.g., 15m, 1h)
REFRESH_TOKEN_TTL=7d   # Refresh token expiration time (e.g., 7d, 30d)

# Session Configuration
SESSION_SECRET=your_session_secret_key_here  # For express-session

# CORS Configuration
CORS_ORIGIN=http://localhost:3000  # Frontend URL, comma-separated for multiple origins

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100  # Max requests per window per IP
AUTH_RATE_LIMIT_MAX=10  # Stricter limit for auth endpoints

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Logging
LOG_LEVEL=info  # error, warn, info, debug, trace

# Security
HELMET_ENABLED=true  # Enable security headers
RATE_LIMIT_ENABLED=true  # Enable rate limiting
CORS_ENABLED=true  # Enable CORS

# Refresh Token Configuration
REFRESH_TOKEN_PATH=/api/auth/refresh-token  # Path where refresh token is accepted
REFRESH_TOKEN_COOKIE_NAME=refreshToken  # Name of the refresh token cookie

# Frontend URLs (for CORS and redirects)
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_LOGIN_PATH=/login
FRONTEND_LOGOUT_PATH=/logout

# Environment-specific overrides
# These will override the above settings in the specified environment
# Example:
# PRODUCTION_DB_HOST=production-db.example.com
# PRODUCTION_DB_USER=production_user
# STAGING_DB_HOST=staging-db.example.com
# STAGING_DB_USER=staging_user
